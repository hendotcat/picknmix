---
title: picknmix
description: Some Sass mixins
---
<!doctype html>
<html
  lang="en"
  dir="ltr">
  <head>
    <meta charset="utf-8" />

    <link
      rel="canonical"
      href="https://hen.cat/picknmix"
    />

    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    />

    <style>
    	{{ css | safe }}
    </style>

    <title>
      {{ title }}
    </title>
  </head>
  <body>
    <main>

      <header>
        <h1>
          {{ title }}
        </h1>
        <p>
          {{ description }}
        </p>
      </header>

      <section>
        <dl>
          {% for mixin in collections.mixins %}
            <dt>
              <a href="{{ url }}/mixins/{{ mixin.data.name | slug }}">
                {{ mixin.data.name }}
              </a>
            </dt>
            <dd>
              {{ mixin.data.description }}
            </dd>
          {% endfor %}
        </dl>
      </section>

      <footer>
        Henry Catalini Smith
      </footer>
    </main>
  </body>
</html>

